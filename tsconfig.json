{
    "compilerOptions": {
        "outDir": "./dist",
        "target": "es2015",
        "module": "CommonJS",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "strictNullChecks": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
		// TODO: Update all imports to be relative to the src folder
        "baseUrl": "./src",
        "allowSyntheticDefaultImports": true,
        "declaration": true,
        "declarationDir": "./types",
		"types" : ["node", "jest"]
    },
    "exclude": [
		"src/tests"
    ],
    "include": [
        "src/index.ts"
    ]
}