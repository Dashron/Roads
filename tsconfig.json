{
	"compilerOptions": {
		"outDir": "./dist",
		"target": "ES2022",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"noImplicitAny": true,
		"strictNullChecks": true,
		"noImplicitThis": true,
		"alwaysStrict": true,
		"baseUrl": "./src",
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"declaration": true,
		"declarationDir": "./types",
		"types": ["node"],
		"lib": ["es2022", "dom"],
		"declarationMap": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"inlineSources": true,
		"sourceRoot": "/",
		"noErrorTruncation": true
	},
	"exclude": ["test"],
	"include": ["src/index.ts"]
}
