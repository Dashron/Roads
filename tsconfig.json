{
	"compilerOptions": {
		"outDir": "./dist",
		"target": "ES2023",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"noImplicitAny": true,
		"strictNullChecks": true,
		"noImplicitThis": true,
		"alwaysStrict": true,
		"exactOptionalPropertyTypes": true,
		"noUncheckedIndexedAccess": true,
		"baseUrl": "./src",
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"declaration": true,
		"declarationDir": "./types",
		"types": ["node"],
		"lib": ["es2023", "dom"],
		"declarationMap": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"inlineSources": true,
		"sourceRoot": "/",
		"incremental": true,
		"tsBuildInfoFile": "./dist/.tsbuildinfo",
		"noErrorTruncation": true
	},
	"exclude": ["test"],
	"include": ["src/index.ts"]
}
