{
    "compilerOptions": {
        "outDir": "./dist",
        "target": "es2015",
        "module": "CommonJS",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "strictNullChecks": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "baseUrl": ".",
        "allowSyntheticDefaultImports": true,
        "declaration": true,
        "declarationDir": "./types"
    },
    "exclude": [
        "./types",
        "./example"
    ],
    "include": [
        "./src/**/*.ts"
    ]
}