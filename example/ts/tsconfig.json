{
    "compilerOptions": {
        "outDir": "./dist/node",
        "target": "es2022",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "noImplicitAny": true,
        "strictNullChecks": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "baseUrl": ".",
        "allowSyntheticDefaultImports": true,
        "declaration": true,
        "declarationDir": "./types"
    },
    "exclude": [
        "./types",
        "./example/js"
    ],
    "include": [
        "./src/**/*.ts"
    ]
}