{
    "compilerOptions": {
        "target": "es2015",
        "module": "AMD",
		"moduleResolution": "Node",
		"outFile": "./dist-frontend/roads.js",
        "noImplicitAny": true,
        "strictNullChecks": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "baseUrl": ".",
        "allowSyntheticDefaultImports": true,
        "declaration": true,
    },
    "exclude": [
        "./types",
        "./example/js"
    ],
    "include": [
        "./src/**/*.ts"
    ]
}